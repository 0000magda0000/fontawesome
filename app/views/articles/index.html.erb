<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to(article) do %>
           <i class="far fa-eye"></i>
           <% end %>
        </td>
        <td><%= link_to edit_article_path(article) do %>
            <i class="far fa-edit"></i>
            <% end %>
      </td>
        <td><%= link_to(article, method: :delete, data: { confirm: 'Are you sure?' }) do %>
            <i class="fa fa-trash"></i>
            <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (new_article_path) do %>
  <i class="fa fa-comment fa-10x"></i>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.date %></td>
        <td><%= link_to(article) do %>
           <i class="far fa-eye"></i>
           <% end %>
        </td>
        <td><%= link_to edit_article_path(article) do %>
            <i class="far fa-edit"></i>
            <% end %>
      </td>
        <td><%= link_to(article, method: :delete, data: { confirm: 'Are you sure?' }) do %>
            <i class="fa fa-trash"></i>
            <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
